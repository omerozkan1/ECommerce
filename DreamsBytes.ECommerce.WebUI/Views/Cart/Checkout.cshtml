@model OrderDto
@{
    ViewData["Title"] = "Checkout";
}

<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Sipariş Detayları</h4>
        <form asp-action="Checkout"  method="post">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="@Model.FullName">Ad-Soyad</label>
                    <input asp-for="@Model.FullName" value="" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="@Model.Phone">Cep Telefonu</label>
                    <input asp-for="@Model.Phone" value="" class="form-control" />
                </div>
            </div>
            <hr class="mb-4" />

            <div class="d-block my-3">
                <label>Kredi Kartı</label>
                <input type="checkbox" value="Kredi Kartı" />
            </div>
            <div class="d-block my-3">
                <label>EFT</label>
                <input type="checkbox" value="EFT" />
            </div>

            <hr class="mb-4" />
            <button type="submit" class="btn btn-primary btn-lg btn-block">Alışverişi Tamamla</button>
        </form>
    </div>
    <div class="col-md-4 mb-4">

        <h4 class="mb-3">
            <span class="text-muted">Sepetiniz</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.CartDto.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6 class="my-0">
                            @item.Name
                        <small>x @item.Quantity</small>
                    </h6>
                </div>
                <span class="text-muted">@item.Price TL</span>
            </li>
        }
            <li class="list-group-item d-flex justify-content-between">
                <span>Total (TL)</span>
                <strong>@Model.CartDto.TotalPrice() TL</strong>
            </li>
        </ul>

    </div>
</div>

